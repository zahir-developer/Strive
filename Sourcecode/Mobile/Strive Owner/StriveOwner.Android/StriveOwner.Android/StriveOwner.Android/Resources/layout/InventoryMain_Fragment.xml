<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Inventory List"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="" />
     </RelativeLayout>
    <android.support.v7.widget.SearchView
        android:id="@+id/inventory_SearchView"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:background="@drawable/color_searchview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:queryHint="Search"/>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/inventoryMain_RecyclerView"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_width="match_parent"
            android:background="@android:color/background_light"
            android:layout_weight="1.6"
            android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/inventory_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:layout_marginRight="40dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/primary_button"/>
    </LinearLayout>
           </LinearLayout>
</LinearLayout>