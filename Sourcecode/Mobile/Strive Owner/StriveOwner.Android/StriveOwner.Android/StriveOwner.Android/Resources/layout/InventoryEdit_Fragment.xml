<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Inventory List"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="" />
     </RelativeLayout>
    <ImageView
        android:id="@+id/edit_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/edit_ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginLeft="@dimen/twenty"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"
        android:text="Click to edit"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#99FEF3"
        android:textSize="28sp"
        android:layout_marginLeft="@dimen/twenty"
        android:fontFamily="@font/opensans_bold"
        android:text="Item"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/item_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Item Code"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Item Name"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Item Description"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/item_quantity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Item Quantity"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#99FEF3"
        android:textSize="28sp"
        android:layout_marginLeft="@dimen/twenty"
        android:fontFamily="@font/opensans_bold"
        android:text="Supplier"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/supplier_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Name"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/supplier_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Contact"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/supplier_fax"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Fax"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/supplier_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Address"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
     <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/edit_text"
        app:hintEnabled="true">
        <EditText
            android:id="@+id/supplier_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="Email"
            android:textColorHint="@color/defaultHintColor"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="bottom|center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/secondary_button"/>
        <Button
            android:id="@+id/edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/primary_button"/>
    </LinearLayout>
</LinearLayout>
