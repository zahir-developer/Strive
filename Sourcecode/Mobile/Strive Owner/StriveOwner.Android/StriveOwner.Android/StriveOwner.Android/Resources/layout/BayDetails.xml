<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <android.support.v7.widget.CardView
        android:id="@+id/baydetails_ItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "1"
            android:background="@drawable/secondarylinearlayout">
            <ImageView
                android:id="@+id/bay_button"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:src="@drawable/right_arrow"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"> 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bay_number"
                    android:textColor="#02143D"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:id="@+id/ticket_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#02143D"
                    android:fontFamily="@font/opensans_bold"/>
                 <LinearLayout
                    android:id="@+id/home_timein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time In:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/timein_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Client:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/client_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phone:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/phones_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time Out(Est.):"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/timeout_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_makemodelcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Make/Model/Color:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/makemodelcolor_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Service:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/serviceshome_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_upcharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Upcharges:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/upchargeshome_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>              
            </LinearLayout>
       </LinearLayout> 
    </android.support.v7.widget.CardView>
</LinearLayout>