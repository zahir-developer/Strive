
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:textSize="13sp"
                android:text="Avg Wash $ per car"
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/redchart"/>
                <TextView
                    android:id="@+id/avgmoneyewashpercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:textSize="13sp"
                android:text="Avg Detail $ per car "
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/yellowchart"/>
                <TextView
                    android:id="@+id/avgmoneyedetailpercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:textSize="13sp"
                android:text="Avg Extra Service per car "
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/bluechart"/>
                <TextView
                    android:id="@+id/avgmoneyeextraservicepercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:text="Avg Total per call All"
                android:textSize="13sp"
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/currentcars"/>
                <TextView
                    android:id="@+id/avgmoneytotalpercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:textSize="13sp"
                android:text="Labor cost per car"
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/laborsales"/>
                <TextView
                    android:id="@+id/laborcostpercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/homelinearlayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#11283D"
                android:text="Detail cost per car"
                android:textSize="13sp"
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/detailcost"/>
                <TextView
                    android:id="@+id/detailcostpercar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#11283D"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp"
                    android:gravity="center|right"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>