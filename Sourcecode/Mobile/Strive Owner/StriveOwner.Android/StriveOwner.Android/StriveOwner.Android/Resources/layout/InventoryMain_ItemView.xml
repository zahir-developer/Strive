
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="7dp"
        android:weightSum="4">  
        <ImageView
            android:id="@+id/inventorymain_ImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/productcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="productcode"/>
            <TextView
                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="productname"/>
            <TextView
                android:id="@+id/productdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="productdescription"/>
            <TextView
                android:id="@+id/productviewmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#24489A"
                android:fontFamily="@font/opensans_bold"
                android:text="View More"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/quantityInc"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"/>
            <TextView
                android:id="@+id/quantityProds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#24489A"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/opensans_bold"
                android:text="0"/>
             <Button
                android:id="@+id/quantityDec"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"/>
        
        </LinearLayout>
    </LinearLayout>        
</LinearLayout>