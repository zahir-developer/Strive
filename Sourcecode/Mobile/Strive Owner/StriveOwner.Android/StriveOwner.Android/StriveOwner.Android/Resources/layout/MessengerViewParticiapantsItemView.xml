<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <Button   
            android:id="@+id/ParticipantGroupProfile_ImageButton" 
            android:clickable="false"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop = "@dimen/ten"
            android:layout_marginBottom = "@dimen/ten"
            android:layout_marginLeft = "@dimen/ten"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_semibold"
            android:background="@drawable/profileavatar_button"/>
        <TextView
            android:id="@+id/ParticipantGroup_TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/twenty"
            android:gravity="left|center"
            android:layout_weight="0.9"
            android:textSize="@dimen/fifteen"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_semibold" />
        <ImageButton
            android:id="@+id/ParticipantGroupDelete_ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/delete_circle" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>