
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
         <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Suppliers"
            android:textColor="#333333"
            android:textSize="18dp"
            android:layout_weight="0.9"
            android:fontFamily="@font/opensans_bold"/>
        <ImageView
            android:id="@+id/closepopup"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:layout_gravity="center|right"
            android:src="@drawable/close"/>
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="left">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#02143D"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:id="@+id/popout_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="left">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact:"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#02143D"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:id="@+id/popout_Contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="left">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FAX:"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#02143D"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:id="@+id/popout_FAX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="left">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#02143D"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:id="@+id/popout_Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="left">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#02143D"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_bold"/>
        <TextView
            android:id="@+id/popout_Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <Button
        android:id="@+id/popout_Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textColor="@android:color/white"
        android:background="@drawable/primary_button"/>
    <TextView
        android:id="@+id/edit_Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#24489A"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/opensans_bold"
        android:text="Click here to edit the item"/>
</LinearLayout>