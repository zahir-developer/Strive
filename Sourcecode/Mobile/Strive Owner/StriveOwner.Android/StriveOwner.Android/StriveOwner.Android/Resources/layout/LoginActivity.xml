<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/forty"    
        android:gravity="center">
       <ImageView
           android:layout_width="@dimen/Strive_Logo_Width"
           android:layout_height="@dimen/Strive_Logo_Height"
            android:src="@drawable/strive_logo_page"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/thirty">
        <TextView
            android:id="@+id/loginHeading"              
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty"  
            android:layout_marginLeft="@dimen/twenty"          
            android:textColor="@color/defaultLabelColor"        
            android:fontFamily="@font/opensans_bold"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edit_text"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/emailPhoneInputs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="@string/email_or_phone"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edit_text"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edit_text"
                app:hintEnabled="true" 
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/passwordInputs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/twelve"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/password"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edit_text"
                    android:inputType="textPassword" /> 
            </android.support.design.widget.TextInputLayout>
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten">
        <CheckBox
            android:id="@+id/rememberMeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/seven"
            android:buttonTint="@android:color/white"/>
        <TextView
            android:id="@+id/rememberMeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultLabelColor"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fourteen">
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultLabelColor"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/opensans_bold" />
    </LinearLayout>
</LinearLayout>