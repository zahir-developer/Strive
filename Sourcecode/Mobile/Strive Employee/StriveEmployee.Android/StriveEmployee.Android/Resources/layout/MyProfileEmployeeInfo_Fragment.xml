
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fifteen"
            android:textColor="@color/profileQColor"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:text="Personal Detail"/>
    </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="First Name:"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="@color/profileQColor"
                android:textSize="@dimen/textFourteen"
                android:fontFamily="@font/opensans_regular"/>
            <TextView
                android:id="@+id/employeeFirstName_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/profileQColor"
                android:textSize="@dimen/textFourteen"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/employeeLastName_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/gender_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact No:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/contactNo_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SSN:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/SSN_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Immigration Status:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/immigration_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/address_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fifteen"
            android:textColor="@color/profileQColor"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:text="Employee Detail"/>

    </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login ID:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
        <TextView
            android:id="@+id/loginID_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date of Hire:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/DOH_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/status_TextView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Exemptions:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/profileQColor"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/exemptions_TextVIew"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:textColor="@color/profileQColor"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
</LinearLayout>