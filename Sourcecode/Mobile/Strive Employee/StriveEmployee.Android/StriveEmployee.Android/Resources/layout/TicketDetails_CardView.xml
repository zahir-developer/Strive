
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/dealsInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">          
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven">
                <TextView
                    android:id="@+id/ticket_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:text="Ticket No:"
                    android:textColor="@color/ticketTextColor"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:id="@+id/ticketNumber_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:layout_marginLeft="@dimen/ten"    
                    android:text="Ticket No:"
                    android:textColor="@color/ticketTextColor"    
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/makeModelColor_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Make/Model/Color :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/makeModelColorValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:layout_weight="0.5"   
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/washService_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Wash Service :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/washServiceValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"    
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/upcharge_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Upcharge :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/upchargeValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"    
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/barcode_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Barcode :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/barcodeValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"    
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/customer_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Customer :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/customerValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"    
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/additionalServices_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:text="Additional Services :"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/additionalServicesValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"    
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <Button
                    android:id="@+id/decline_Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/secondary_button"
                    android:fontFamily="@font/opensans_bold"
                    android:text="DECLINE"
                    android:layout_margin="@dimen/five"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/complete_Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/primary_button"
                    android:fontFamily="@font/opensans_bold"
                    android:text="COMPLETE"
                    android:layout_margin="@dimen/five"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>