
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/dealsInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">          
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum = "1">
                <TextView
                    android:id="@+id/scheduleTicket_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#1DC9B7"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:id="@+id/scheduleTicketValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#1DC9B7"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/allTickets_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="@color/defaultButtonColor"
                    android:text="Ticket No:"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/makemodelColor_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#27446E"
                    android:gravity="right"
                    android:text="Make/Model/Color:"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/makemodelColorValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#27446E"
                    android:gravity="left"
                    android:layout_weight="0.5"   
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/washService_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#27446E"
                    android:gravity="right"
                    android:text="Vehicle:"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/washServiceValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#27446E"
                    android:gravity="left"
                    android:layout_weight="0.5"   
                    android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moreInfo_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView   
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:text="upcharges"
                        android:gravity="right"
                        android:textColor="#27446E"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/upcharges_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:textSize="@dimen/textFifteen"  
                        android:textColor="#27446E"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="#27446E"
                        android:gravity="right"
                        android:text="Barcode:"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/barcode_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="#27446E"
                        android:gravity="left"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="#27446E"
                        android:text="Customer:"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/customerValue_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="#27446E"
                        android:gravity="left"
                        android:fontFamily="@font/opensans_regular"/>
                 </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="#27446E"
                        android:text="Price :"
                        android:gravity="right"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/additionalService_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"  
                        android:textColor="#27446E"
                        android:gravity="left"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <Button 
                        android:id="@+id/decline_Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="@android:color/white"
                        android:background="@drawable/secondary_button"
                        android:text="Decline"
                        android:fontFamily="@font/opensans_bold"/>
                    <Button
                        android:id="@+id/completes_Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="@android:color/white"
                        android:background="@drawable/primary_button"
                        android:text="Complete"
                        android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
            </LinearLayout>          
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>