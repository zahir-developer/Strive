
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text= "Edit Collision"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/editCollisionsBack_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
        <Button
            android:id="@+id/editCollisionsSave_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Save" />
        </RelativeLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginBottom="90dp"
        android:background="@drawable/secondarylinearlayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:background="@drawable/borderededittext"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten">
        <Spinner
            android:id="@+id/editCollisionType_Spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@drawable/borderededittext"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginLeft="@dimen/ten">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"                 
                android:layout_marginRight="@dimen/ten"
                android:background="@drawable/edit_text"
                android:layout_gravity="center_vertical"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/editCollisionsDate_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Date of Collision"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edit_text"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@drawable/borderededittext"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginLeft="@dimen/ten">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"    
                android:layout_marginRight="@dimen/ten"
                android:background="@drawable/edit_text"
                android:layout_gravity="center_vertical"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/editCollisionAmount_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Amount"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edit_text"
                    android:inputType="number"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@drawable/borderededittext"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginLeft="@dimen/ten">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"   
                android:layout_marginRight="@dimen/ten"
                android:background="@drawable/edit_text"
                android:layout_gravity="center_vertical"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/editCollisionNotes_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Reason"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edit_text"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id = "@+id/editCollision_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>    
</LinearLayout>