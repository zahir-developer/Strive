<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <android.support.v7.widget.CardView
        android:id="@+id/scheduledetailer_ItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
       <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "1"
            android:background="@drawable/secondarylinearlayout">            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/detailer_TicketNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ticket Number:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/TicketNumber_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>                
                <LinearLayout
                    android:id="@+id/detailer_VehicleInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Details:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/VehicleInfo_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detailer_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Service(s):"
                        android:layout_marginLeft="20dp" 
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/DetailService_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:singleLine="false"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/detailer_additionalservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional Service(s):"
                        android:layout_marginLeft="20dp" 
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/AdditionalService_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:singleLine="false"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                 <LinearLayout
                    android:id="@+id/detailer_Timein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time In:"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/TimeIn_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>             
            
                <LinearLayout
                    android:id="@+id/detailer_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Time Out(Est.):"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold"/>
                    <TextView
                        android:id="@+id/TimeOut_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>              
                           
            </LinearLayout>
       </LinearLayout> 
    </android.support.v7.widget.CardView>
</LinearLayout>