
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Employment Details"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/employmentDetails_SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Save" />
        <Button
            android:id="@+id/employmentDetails_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="65dp"
                android:background="@drawable/secondarylinearlayout">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/loginID_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Login ID"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/DateoFHire_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Date of Hire"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/borderededittext">
            <Spinner
                android:id="@+id/status_Spinner"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        </LinearLayout>
</LinearLayout>