<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:orientation="vertical">
        <Button   
            android:id="@+id/contact_ImageView" 
            android:clickable="false"
            android:layout_gravity="left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop = "@dimen/ten"
            android:layout_marginBottom = "@dimen/five"
            android:layout_marginLeft = "@dimen/ten"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_semibold"
            android:background="@drawable/profileavatar_button"/>
        <TextView
            android:id="@+id/contactName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/seven"
            android:gravity="center"
            android:textSize="@dimen/fourteen"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_semibold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/recipient_ChatBubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/seven"
            android:layout_marginLeft="@dimen/seven"
            android:layout_marginBottom="@dimen/five"
            android:textColor="@color/recipientTextColor"
            android:background="@drawable/recipient_chatbubble"/>
        <TextView
            android:id="@+id/recipient_ChatTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/seven"
            android:textColor="@color/recipientTextColor"/>
    </LinearLayout>
</LinearLayout>