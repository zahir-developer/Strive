
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">
    <Button   
        android:id="@+id/recentContact_ImageView" 
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop = "@dimen/five"
        android:layout_marginBottom = "@dimen/five"
        android:layout_marginLeft = "@dimen/five"
        android:background="@drawable/profileavatar_button"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "@dimen/ten"
        android:layout_marginBottom = "@dimen/ten"
        android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="1"
             android:orientation="horizontal">
             <TextView
                android:id="@+id/recentContactName_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_weight="0.7"
                android:fontFamily="@font/opensans_bold"/>
             <TextView
                android:id="@+id/recentContactMessageTime_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_weight="0.3"
                android:fontFamily="@font/opensans_regular"/>
         </LinearLayout>
        <TextView
            android:id="@+id/recentContactLastText_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
</LinearLayout>