
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button   
            android:id="@+id/recentContact_ImageView" 
            android:clickable="false"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop = "@dimen/five"
            android:layout_marginBottom = "@dimen/five"
            android:layout_marginLeft = "@dimen/ten"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_semibold"
            android:background="@drawable/profileavatar_button"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "@dimen/ten"
            android:layout_marginBottom = "@dimen/ten"
            android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:weightSum="1"
                 android:orientation="horizontal">
                 <TextView
                    android:id="@+id/recentContactName_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="0.7"
                    android:textColor="@color/profileQColor"
                    android:fontFamily="@font/opensans_semibold"/>
                 <TextView
                    android:id="@+id/recentContactMessageTime_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_weight="0.3"
                    android:textColor="@color/AvatarTextColor"
                    android:fontFamily="@font/opensans_regular"/>
             </LinearLayout>
            <TextView
                android:id="@+id/recentContactLastText_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/AvatarTextColor"
                android:layout_marginLeft="@dimen/ten"
                android:fontFamily="@font/opensans_regular"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>