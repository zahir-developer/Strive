
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/verticalLine_LinearLayout"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#FD397A" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/seven">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_marginTop = "6dp"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/membershipStatus_LinearLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:weightSum="1.4">
                    <ImageView
                        android:id="@+id/checkOut_ImageView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginRight="@dimen/seven" />                    
                    <TextView
                        android:id="@+id/checkoutPayment_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="0.5"
                        android:textColor="#02143D"
                        android:text="completed"
                        android:fontFamily="@font/opensans_bold"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginRight="@dimen/twenty"/>
                </LinearLayout>               
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/checkOutNumber_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="5919875"
                    android:textColor="#FD397A"
                    android:textSize="@dimen/textSixteen"   
                    android:fontFamily="@font/opensans_bold" 
                    android:layout_margin="@dimen/three"/>
                
            </LinearLayout>
            <TextView
                android:id="@+id/checkOutName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eda Gislon"
                android:textColor="@color/profileQColor"
                android:textSize="@dimen/textSixteen"
                android:fontFamily="@font/opensans_bold" 
                android:layout_margin="@dimen/three"/>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/checkOutVehicle_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="Aston Martin/Blue"
                    android:textColor="@color/profileQColor"
                    android:textSize="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular" 
                    android:layout_margin="@dimen/three"/>
                 <TextView
                    android:id="@+id/checkOutServicePrice_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$40"
                    android:textColor="@color/profileQColor"
                    android:textSize="20sp"
                    android:fontFamily="@font/opensans_bold" />
                <ImageView
                    android:id="@+id/checkOutArrow_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>              
              </LinearLayout>            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <TextView
                    android:id="@+id/checkOutService_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services:"
                    android:textColor="@color/profileQColor"
                    android:textSize="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular" 
                    android:layout_margin="@dimen/three"/>
                <TextView
                    android:id="@+id/checkOutServiceName_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mini Mammoth"
                    android:textColor="@color/profileQColor"
                    android:textSize="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular" 
                    android:layout_margin="@dimen/three"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check in "
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold" 
                        android:layout_margin="@dimen/three"/>
                    <TextView
                        android:id="@+id/checkInTime_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:07"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold" 
                        android:layout_margin="@dimen/three"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/profileQColor"
                    android:textSize="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold" 
                    android:layout_margin="@dimen/three"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check out "
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold" 
                        android:layout_margin="@dimen/three"/>
                    <TextView
                        android:id="@+id/checkOutTime_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:07"
                        android:textColor="@color/profileQColor"
                        android:textSize="@dimen/textFourteen"
                        android:fontFamily="@font/opensans_bold" 
                        android:layout_margin="@dimen/three"/>
                </LinearLayout>

            </LinearLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>