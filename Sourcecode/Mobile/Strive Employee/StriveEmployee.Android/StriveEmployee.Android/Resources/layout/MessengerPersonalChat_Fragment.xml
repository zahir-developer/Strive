
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:id="@+id/chatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Personal Chats"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/personalChatBack_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:orientation="vertical"
        android:background="@drawable/secondarylinearlayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="1">
        <TextView
            android:id="@+id/personalContactName_TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95"    
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:textSize="@dimen/textSixteen"
            android:textColor="@color/profileQColor"
            android:fontFamily="@font/opensans_bold" />
        <ImageButton
            android:id="@+id/chatMenu_ImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:layout_marginLeft="@dimen/ten"
            android:layout_gravity="center"
            android:src="@drawable/dotsThree"
            android:visibility="gone"
            android:background="@color/mtrl_btn_transparent_bg_color"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1.02">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/message_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_marginTop="@dimen/five"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
                android:layout_weight="0.1"
				android:weightSum="1"
				android:background="@color/chatTextLayoutColor"
				android:layout_marginBottom="21.0dp">
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:weightSum="1"
					android:orientation="horizontal"
					android:layout_margin="@dimen/five"
					android:background="@drawable/secondarylinearlayout">
					<EditText
						android:id="@+id/chatMessage_EditText"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="0.95"
						android:gravity="left"
						android:background="@null"
						android:hint="Type the message here"
						android:textColorHint="@android:color/darker_gray"/>
					<ImageButton
						android:id="@+id/chatSend_ImageButton"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="top"
						android:layout_marginTop="2dp"
                         android:layout_weight="0.05"
						android:background="@android:color/transparent"
						android:src="@drawable/sendcircle"/>
				</LinearLayout>
				<ImageButton
					android:id="@+id/chatAttach_ImageButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="top"
                    android:visibility="gone"
					android:layout_marginTop="@dimen/ten"
					android:background="@android:color/transparent"
					android:src="@drawable/paperclip"/>
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>