
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <android.support.v7.widget.CardView
        android:id="@+id/dealsInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F2FCFE"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:weightSum="2">
             <Button   
                android:id="@+id/contact_ImageView" 
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop = "@dimen/ten"
                android:layout_marginBottom = "@dimen/ten"
                android:layout_marginLeft = "@dimen/ten"
                android:textColor="@color/profileQColor"
                android:fontFamily="@font/opensans_semibold"
                android:background="@drawable/profileavatar_button"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_marginLeft="@dimen/ten">
                 <TextView
                    android:id="@+id/collisionName_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chevrolet White SUV 4x4"
                    android:textColor="@color/profileQColor"
                    android:fontFamily="@font/opensans_bold">
                  </TextView>
                 <TextView
                    android:id="@+id/collisionDate_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reg. # GTP 01 Y 1025 "
                    android:textColor="@color/profileQColor"
                    android:fontFamily="@font/opensans_semibold">
                </TextView>
                <TextView
                    android:id="@+id/collisionCost_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ultra Mammoth"
                    android:textColor="@color/profileQColor"
                    android:fontFamily="@font/opensans_semibold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="@dimen/ten">
                <ImageButton
                    android:id="@+id/collisionEdit_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five"
                    android:src="@drawable/edit"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:id="@+id/collisionDelete_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_circle"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>