
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Personal Details"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/personalDetails_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
        <Button
            android:id="@+id/personalDetails_SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Save" />
        </RelativeLayout>
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/secondarylinearlayout">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/firstName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="First Name"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/lastName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="Last Name"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:gravity="center"
                android:background="@drawable/borderededittext">
                <Spinner
                    android:id="@+id/genderOptions_Spinner"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>          
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                  android:id="@+id/contactNumber_EditText"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="Contact Number"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="textEmailAddress"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                  android:id="@+id/address_EditText"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="Address"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="textEmailAddress"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                  android:id="@+id/ssn_EditText"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="SSN"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="number"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:gravity="center"
                android:background="@drawable/borderededittext">
                <Spinner
                    android:id="@+id/immigrationOptions_Spinner"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>