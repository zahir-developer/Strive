<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:layout_marginTop="@dimen/twentyFive"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/ten"
            android:textSize ="@dimen/textSixteen"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/profileInfoColor"/>
        <ImageView
            android:id="@+id/personalInfoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editbutton"
            android:layout_marginTop="@dimen/thirty"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/fullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact No:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Zip Code:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/zipCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sec. Phone No:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/secPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:paddingLeft="@dimen/twelve"
            android:textColor="@color/profileQColor"
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"
            android:layout_weight="0.8"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"            
            android:textColor="@color/profileQColor"
            android:text=""
            android:textSize ="@dimen/textFourteen"
            android:fontFamily="@font/opensans_bold"
            android:maxLines="2"
            android:layout_weight="1.2"/>
    </LinearLayout>
</LinearLayout>
