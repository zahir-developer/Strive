
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/washHistory_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">          
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum = "1">
                <TextView
                    android:id="@+id/scheduleTicket_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#1DC9B7"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:id="@+id/scheduleTicketValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="#1DC9B7"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/seven"
                android:weightSum="1">
                <TextView
                    android:id="@+id/makeModelColor_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="@color/scheduleTextColor"
                    android:text="Vehicle:"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/makeModelColorValue_TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textFifteen"
                    android:textColor="@color/scheduleTextColor"
                    android:layout_weight="0.5"   
                    android:fontFamily="@font/opensans_regular"
                />

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView   
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:text="Visit date:"
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/scheduleDetailVisit_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"  
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/moreInfo_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="@color/scheduleTextColor"
                        android:text="Detail Service:"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/detailServices_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/barcode_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="@color/scheduleTextColor"
                        android:text="Barcode:"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/barcodeValue_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                 </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="@color/scheduleTextColor"
                        android:text="Price :"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/schedulePrice_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"  
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/seven"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/additionalServices_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"
                        android:textColor="@color/scheduleTextColor"
                        android:text="Add. Services :"
                        android:fontFamily="@font/opensans_regular"/>
                    <TextView
                        android:id="@+id/additionalServicesValue_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/textFifteen"    
                        android:textColor="@color/scheduleTextColor"
                        android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
            </LinearLayout>          
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>