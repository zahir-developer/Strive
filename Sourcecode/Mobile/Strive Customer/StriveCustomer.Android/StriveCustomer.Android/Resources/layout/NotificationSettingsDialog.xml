
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
     <TextView
        android:id="@+id/textview_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="20sp"
        android:text="Notification Settings"
        android:textStyle="bold"
        android:layout_gravity="center"/>
     <RadioGroup
         android:id="@+id/milesNotifyGroup"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingBottom="30dp">
         <RadioButton
            android:id="@+id/optionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="1mile from nearest store"/>
         <RadioButton
            android:id="@+id/optionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:text="1mile from nearest store,washtime less than 35 mins"/>
         <RadioButton
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:text="1/2mile from nearest store,washtime less than 45 mins"/>
     </RadioGroup>
     <Button
         android:id="@+id/okButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/twenty"
         android:layout_marginRight="@dimen/twenty"
         android:textColor="@color/defaultLabelColor"
         android:fontFamily="@font/opensans_bold"
         android:text="Ok"
         android:layout_gravity="center"
         android:background="@drawable/primarybutton"/>
</LinearLayout>