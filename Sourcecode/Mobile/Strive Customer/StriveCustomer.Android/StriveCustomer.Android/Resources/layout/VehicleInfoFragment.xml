
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:layout_marginLeft="@dimen/twenty"
            android:textColor="@color/profileInfoColor"
            android:text="Vehicle List"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_bold"/>
        <Button            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginBottom="@dimen/fifteen" 
            android:background="@color/mtrl_btn_transparent_bg_color"
            />
        <Button
            android:id="@+id/vehicleInfoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginBottom="@dimen/fifteen"
            android:fontFamily="@font/opensans_bold"
            android:text="Add"
            android:textColor="@android:color/white"
            android:background ="@drawable/primarybutton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/availableVehicles"
            android:layout_marginBottom="@dimen/ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>