
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Preview Details"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/scheduleServices_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
     </RelativeLayout>
    <LinearLayout
            android:id="@+id/ScheduleLocations_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/secondarylinearlayout">  
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Appointment scheduled on"
                android:textSize="14sp"
                android:textColor="#007B6E"
                android:fontFamily="@font/opensans_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/appointmentPreviewDate_TextView"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="#11283D"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/appointmentPreviewTime_TextView"
                    android:textSize="14sp"    
                    android:layout_width="match_parent"
                    android:textColor="#1DC9B7"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>        
           </LinearLayout>
            <TextView
                android:id="@+id/rescheduleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Re-Schedule"
                android:textColor="#24489A"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"/>
             <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                app:cardBackgroundColor="@color/vehicleInfoCardColor"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#30343C"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginLeft="10dp"
                       android:text="Vehicle"/>
                    <TextView
                        android:id="@+id/vehicleName_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:fontFamily="@font/opensans_bold"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
             </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                app:cardBackgroundColor="@color/vehicleInfoCardColor"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#30343C"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensans_regular" 
                        android:text="Selected Services"/>
                    <TextView
                        android:id="@+id/serviceName_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"  
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="#007B6E"/>
                     <TextView
                        android:id="@+id/serviceDescription_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/defaultScheduleText"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/vehicleInfoCardColor"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#30343C"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensans_regular" 
                        android:text="Service Location"/>
                    <TextView
                        android:id="@+id/serviceLocation_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensans_bold" />        
                </LinearLayout>         
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">
                <Button
                    android:id="@+id/CancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textColor="@android:color/white"
                    android:background="@drawable/secondarybutton"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@android:string/cancel"/>
                <Button
                    android:id="@+id/BookNowButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:background="@drawable/primarybutton"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="20dp"
                    android:text="Book Now" />
            
            </LinearLayout>   
    </LinearLayout>
</LinearLayout>