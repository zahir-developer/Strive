
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Vehicle"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/signatureBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
    </RelativeLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:text="Terms and Conditions"
        android:gravity="center"
        android:layout_marginBottom="@dimen/ten"
        android:textSize="@dimen/sixteen"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"    />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginRight="@dimen/thirty"
        android:layout_marginBottom="75dp"
        android:weightSum="5"
        android:background="@drawable/secondarylinearlayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:id="@+id/textDisagree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSixteen"
                    android:layout_marginLeft="@dimen/ten"/>
                <TextView
                    android:id="@+id/textAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="@dimen/textSixteen"
                    android:layout_marginRight="@dimen/ten"/>
        
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>