
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Account"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/backPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
    </RelativeLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Personal Info"
        android:textSize="@dimen/textSixteen"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="65dp"
                android:background="@drawable/secondarylinearlayout">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/borderededittext"
                app:hintEnabled="true">
                <EditText
                    android:id="@+id/contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="@string/contact_no"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:textSize="@dimen/textSixteen"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                   android:id="@+id/Address"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="@string/address"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="textEmailAddress"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                   android:id="@+id/zipCodes"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="@string/zip_code"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="textEmailAddress"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                   android:id="@+id/secondaryPhone"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="@string/sec_phone"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="phone"
                   android:maxLength="14"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty"    
               android:layout_marginTop="@dimen/fifteen"
               android:layout_marginLeft="@dimen/twenty"
               android:layout_marginRight="@dimen/twenty"
               android:layout_marginBottom= "@dimen/fifteen"
               android:background="@drawable/borderededittext"
               app:hintEnabled="true">
               <EditText
                   android:id="@+id/emails"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/forty"
                   android:paddingBottom="@dimen/ten"
                   android:hint="@string/email"
                   android:textColorHint="@color/defaultHintColor"
                   android:background="@null"
                   android:inputType="textEmailAddress"
                   android:textSize="@dimen/textSixteen"
                   android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/personalInfoSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textColor="@color/defaultLabelColor"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/primarybutton"
                android:fontFamily="@font/opensans_bold" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>