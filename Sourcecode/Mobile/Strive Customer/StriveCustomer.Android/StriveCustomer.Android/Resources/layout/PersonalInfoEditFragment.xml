<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/secondarylinearlayout">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"    
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/borderededittext"
            app:hintEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:paddingBottom="@dimen/ten"
                android:hint="@string/full_name"
                android:textColorHint="@color/defaultHintColor"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:id="@+id/fullName"
                android:textSize="@dimen/textSixteen"
                android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"    
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/borderededittext"
        app:hintEnabled="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:paddingBottom="@dimen/ten"
            android:hint="@string/contact_no"
            android:textColorHint="@color/defaultHintColor"
            android:background="@null"
            android:inputType="number"
            android:id="@+id/contactNumber"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/fifty"    
       android:layout_marginTop="@dimen/fifteen"
       android:layout_marginLeft="@dimen/twenty"
       android:layout_marginRight="@dimen/twenty"
       android:background="@drawable/borderededittext"
       app:hintEnabled="true">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="@dimen/forty"
           android:paddingBottom="@dimen/ten"
           android:hint="@string/address"
           android:textColorHint="@color/defaultHintColor"
           android:background="@null"
           android:inputType="textEmailAddress"
           android:id="@+id/Address"
           android:textSize="@dimen/textSixteen"
           android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/fifty"    
       android:layout_marginTop="@dimen/fifteen"
       android:layout_marginLeft="@dimen/twenty"
       android:layout_marginRight="@dimen/twenty"
       android:background="@drawable/borderededittext"
       app:hintEnabled="true">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="@dimen/forty"
           android:paddingBottom="@dimen/ten"
           android:hint="@string/zip_code"
           android:textColorHint="@color/defaultHintColor"
           android:background="@null"
           android:inputType="textEmailAddress"
           android:id="@+id/zipCodes"
           android:textSize="@dimen/textSixteen"
           android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/fifty"    
       android:layout_marginTop="@dimen/fifteen"
       android:layout_marginLeft="@dimen/twenty"
       android:layout_marginRight="@dimen/twenty"
       android:background="@drawable/borderededittext"
       app:hintEnabled="true">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="@dimen/forty"
           android:paddingBottom="@dimen/ten"
           android:hint="@string/sec_phone"
           android:textColorHint="@color/defaultHintColor"
           android:background="@null"
           android:inputType="textEmailAddress"
           android:id="@+id/secondaryPhone"
           android:textSize="@dimen/textSixteen"
           android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/fifty"    
       android:layout_marginTop="@dimen/fifteen"
       android:layout_marginLeft="@dimen/twenty"
       android:layout_marginRight="@dimen/twenty"
       android:layout_marginBottom= "@dimen/fifteen"
       android:background="@drawable/borderededittext"
       app:hintEnabled="true">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="@dimen/forty"
           android:paddingBottom="@dimen/ten"
           android:hint="@string/email"
           android:textColorHint="@color/defaultHintColor"
           android:background="@null"
           android:inputType="textEmailAddress"
           android:id="@+id/emails"
           android:textSize="@dimen/textSixteen"
           android:fontFamily="@font/opensans_regular"/> 
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/personalInfoSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="@color/defaultLabelColor"
        android:layout_marginTop="@dimen/thirty"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/primarybutton"
        android:fontFamily="@font/opensans_bold" />
    </LinearLayout>
</LinearLayout>
