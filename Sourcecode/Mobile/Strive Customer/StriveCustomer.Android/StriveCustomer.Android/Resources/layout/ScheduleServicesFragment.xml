
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg"> 
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Select Service"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/scheduleServices_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
         <Button
            android:id="@+id/scheduleServices_NextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Next" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="110dp">
            <LinearLayout
                android:id="@+id/ScheduleServices_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/secondarylinearlayout">  
            </LinearLayout>
        </ScrollView>
</LinearLayout>