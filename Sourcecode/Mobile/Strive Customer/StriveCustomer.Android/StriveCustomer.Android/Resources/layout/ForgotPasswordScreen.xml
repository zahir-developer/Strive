<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"    
    android:gravity="center">
   <ImageView
       android:layout_width="320dp"
       android:layout_height="70dp"
        android:src="@drawable/Strive_Logo_Page"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="70dp">
<TextView
    android:id="@+id/forgotPasswordTextView"        
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:layout_marginLeft="20dp"          
    android:textColor="@color/defaultLabelColor"        
    android:fontFamily="@font/opensans_bold"/>
<TextView     
    android:id="@+id/receiveOTPTextView"        
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="14dp"
    android:layout_marginTop="20dp"        
    android:layout_marginLeft="20dp"     
    android:fontFamily="@font/opensans_regular"        
    android:textColor="@color/secondaryLabelColor"/>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:boxBackgroundColor="@android:color/white"  
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:hint="@string/email_Id"
    android:fontFamily="@font/opensans_regular"            
    android:textColorHint="@color/defaultHintColor"
    android:id="@+id/forgotPasswordMobile" />  
</android.support.design.widget.TextInputLayout>

 <Button
    android:id="@+id/getOTPButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/defaultLabelColor"
    android:layout_marginTop="20dp"        
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/primarybutton"
    android:fontFamily="@font/opensans_regular"/>
 </LinearLayout>

</LinearLayout>