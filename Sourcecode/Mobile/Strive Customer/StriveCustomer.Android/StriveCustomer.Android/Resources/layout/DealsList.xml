
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@android:color/transparent">
    <android.support.v7.widget.CardView
        android:id="@+id/dealsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <CheckBox
                android:id="@+id/dealsCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/radiobutton"
                android:layout_marginLeft="@dimen/ten"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/dealOptionHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="bounce back coupon"
                    android:textColor="@color/profileQColor"
                    android:textSize="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"/>
                <TextView
                    android:id="@+id/dealsValidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bounce back coupon"
                    android:textColor="@color/profileQColor"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:textSize="@dimen/textTwelve"
                    android:fontFamily="@font/opensans_semibold"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>