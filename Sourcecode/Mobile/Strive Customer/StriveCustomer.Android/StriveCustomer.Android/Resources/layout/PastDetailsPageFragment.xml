
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/carModelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="White BMW 8"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSixteen"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vehicle barcode:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
            <TextView
                android:id="@+id/barcodeNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:layout_weight="1"
                android:textSize="@dimen/textFourteen"
                android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Make:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
            <TextView
                android:id="@+id/carMake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Suzuki"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/textFourteen"
                android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Model:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
            android:id="@+id/carModel"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="M8"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Color:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/carColor"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="White"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detail visit date:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/carVisitDate"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="12/3/2020"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detail package name:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/packageName"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Loreum"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Additional service availed:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/additionalService"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="yes"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="@dimen/textFourteen"
            android:fontFamily="@font/opensans_regular"/>
         <TextView
             android:id="@+id/washPrice"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="2000"
             android:layout_weight="1"
             android:gravity="center"
             android:textSize="@dimen/textFourteen"
             android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>