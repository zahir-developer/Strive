<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="20dp"
    android:background="@drawable/curvedbottomsheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_skipCollapsed="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/tipBottomSheet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textFifteen"
            android:textColor="@color/scheduleTextColor"
            android:layout_margin="10dp"
            android:text="Add Tip"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/material_grey_900"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipAmountOne"
            android:textSize="@dimen/textFifteen"
            android:layout_margin="10dp"
            android:text="$1"
            android:textColor="@android:color/holo_red_light"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/material_grey_900"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipAmountTwo"
            android:textSize="@dimen/textFifteen"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="10dp"
            android:text="$2"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/material_grey_900"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipAmountThree"
            android:textSize="@dimen/textFifteen"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="10dp"
            android:text="$3"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/material_grey_900"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipAmountFour"
            android:textSize="@dimen/textFifteen"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="10dp"
            android:text="$4"
            android:gravity="center_horizontal"
            android:fontFamily="@font/opensans_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/material_grey_900"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/scheduleTextColor"
            android:background="@drawable/secondarybutton"
            android:text="Cancel"
            android:id="@+id/tipCancelButton"/>

    </LinearLayout>

</FrameLayout>
