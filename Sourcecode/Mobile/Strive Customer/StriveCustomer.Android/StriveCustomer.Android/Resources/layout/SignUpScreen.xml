
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/forty"    
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/Strive_Logo_Width"
            android:layout_height="@dimen/Strive_Logo_Height"
            android:src="@drawable/strive_logo_page"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/thirty">
        <TextView
            android:id="@+id/signUpTextView"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty"
            android:layout_marginLeft="@dimen/twenty"
            android:textColor="@color/defaultLabelColor"        
            android:fontFamily="@font/opensans_bold"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:inputType="phone"
                    android:textSize="@dimen/textSixteen"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/mobile_number"
                    android:textColorHint = "@color/defaultHintColor"
                    android:id="@+id/signUpMobile" />  
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="@string/email_Id"
                    android:textSize="@dimen/textSixteen"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint = "@color/defaultHintColor"
                    android:inputType="textEmailAddress"
                    android:id="@+id/signUpEmail" /> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:hint="@string/Name"
                    android:textSize="@dimen/textSixteen"
                    android:background="@drawable/edittext"   
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint = "@color/defaultHintColor"
                    android:inputType="textPersonName"
                    android:id="@+id/signUpName" /> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"    
                    android:hint="@string/password"
                    android:textSize="@dimen/textSixteen"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint = "@color/defaultHintColor"
                    android:inputType="textPassword"
                    android:id="@+id/signUpPassword" /> 
            </android.support.design.widget.TextInputLayout> 
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"      
                    android:hint="@string/confirm_password"
                    android:textSize="@dimen/textSixteen"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/opensans_regular"
                    android:textColorHint = "@color/defaultHintColor"                
                    android:inputType="textPassword"
                    android:id="@+id/signUpConfirmPassword" /> 
            </android.support.design.widget.TextInputLayout> 
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ten">
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/defaultLabelColor"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/primarybutton"/>
    </LinearLayout>
</LinearLayout>