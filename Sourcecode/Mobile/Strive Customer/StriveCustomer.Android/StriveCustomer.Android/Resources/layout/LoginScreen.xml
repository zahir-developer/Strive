
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:id="@+id/termsLayout"
         android:visibility="gone">
      <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_margin="@dimen/forty"
             android:background="@drawable/secondarylinearlayout">        
        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Terms And Conditions"
             android:textSize="16sp"
             android:textColor="@android:color/black"
             android:fontFamily="@font/opensans_bold"
             android:gravity="center_horizontal"
             android:paddingTop="@dimen/five"
             android:layout_marginBottom="@dimen/five"/>        
        <ScrollView
             android:layout_width="match_parent"
             android:fillViewport="true"
                android:layout_weight="1"
             android:layout_height="match_parent">               
             <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" 
                  android:orientation="vertical"
                  android:layout_marginLeft="@dimen/five"
                  android:layout_marginRight="@dimen/five"                  
                  >
                <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"                     
                     android:id="@+id/terms0"
                     android:contentDescription="@string/description"
                     android:src="@drawable/Terms0"
                />
                <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/terms1"
                     android:contentDescription="@string/description"
                     android:src="@drawable/Terms1"
                />
                <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:contentDescription="@string/description"
                     android:id="@+id/terms2"                     
                     android:src="@drawable/Terms2"
                />
                <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:contentDescription="@string/description"
                     android:src="@drawable/Terms3"
                />
                
             </LinearLayout>
        </ScrollView>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <Button
                android:id="@+id/buttonDisagree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Disagree" 
                android:textColor="@color/defaultLabelColor"
                android:background="@drawable/primarybutton"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_bold"                
                android:textSize="@dimen/textSixteen"
                android:layout_margin="@dimen/ten"/>
            <Button
                android:id="@+id/buttonAgree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Agree"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/defaultLabelColor"
                android:textSize="@dimen/textSixteen"
                android:background="@drawable/primarybutton"
                android:layout_margin="@dimen/ten"/>        

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/forty"
        android:id="@+id/loginLayout"
        android:visibility="visible"
        android:gravity="center">
       <ImageView
           android:layout_width="@dimen/Strive_Logo_Width"
           android:layout_height="@dimen/Strive_Logo_Height"
            android:contentDescription="@string/description"
            android:src="@drawable/Strive_Logo_Page"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/thirty">
        <TextView
            android:id="@+id/loginTextView"              
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty"  
            android:layout_marginLeft="@dimen/twenty"          
            android:textColor="@color/defaultLabelColor"        
            android:fontFamily="@font/opensans_bold"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"    
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                android:labelFor="@id/emailPhoneInputs"
                app:hintEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/ten"
                    android:minHeight="48dp"
                    android:hint="@string/email_or_phone"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edittext"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailPhoneInputs"
                    android:textSize="@dimen/textSixteen"
                    android:contentDescription="@string/email_id_description"
                    android:fontFamily="@font/opensans_regular"/> 
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:minHeight="48dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/edittext"
                app:hintEnabled="true"
                android:labelFor="@id/passwordInputs"
                app:passwordToggleEnabled="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:paddingBottom="@dimen/twelve"
                    android:textSize="@dimen/textSixteen"
                    android:minHeight="48dp"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/password"
                    android:textColorHint="@color/defaultHintColor"
                    android:background="@drawable/edittext"
                    android:inputType="textPassword"
                    android:contentDescription="@string/password_description"
                    android:id="@+id/passwordInputs"/> 
            </android.support.design.widget.TextInputLayout>
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="48dp"
        android:layout_marginTop="@dimen/ten">
        <CheckBox
            android:id="@+id/rememberMeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/seven"
            android:buttonTint="@android:color/white"/>
        <TextView
            android:id="@+id/rememberMeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultLabelColor"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fourteen">
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultLabelColor"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/primarybutton"
            android:fontFamily="@font/opensans_bold" />
        <TextView
            android:id="@+id/forgotPasswordLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginLeft="@dimen/twenty"  
            android:layout_marginRight="@dimen/seven"
            android:textColor="@color/defaultButtonColor"
            android:fontFamily="@font/opensans_regular"/>
        
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:layout_marginTop="@dimen/sixty"
        android:gravity="center">
        <TextView
            android:id="@+id/newAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultLabelColor" 
            android:fontFamily="@font/opensans_regular"    
            android:layout_marginLeft="@dimen/ten"    
            android:gravity="center"/>
        <TextView
            android:id="@+id/signUpLinkText"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"    
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/defaultButtonColor"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>