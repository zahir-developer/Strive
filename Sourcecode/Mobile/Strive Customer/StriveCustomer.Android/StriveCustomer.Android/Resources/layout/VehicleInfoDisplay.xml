
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Vehicle"
            android:textSize="16sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/vehicleInfoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
        <Button
            android:id="@+id/vehicleInfoNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Next" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Vehicle List"
        android:fontFamily="@font/opensans_bold" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginLeft="@dimen/twentyFive"
        android:layout_marginRight="@dimen/twentyFive"
        android:layout_marginBottom="100dp"
        android:background="@drawable/secondarylinearlayout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five">
            <TextView
                android:id="@+id/vehicleName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:text="White Color"
                android:layout_marginTop="@dimen/ten"
                android:textSize="16sp"
                android:textColor="@color/profileQColor"
                android:fontFamily="@font/opensans_semibold" />
            <ImageButton
                android:id="@+id/vehicleEdits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/ten"
                android:src="@drawable/editbutton"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/five"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Bar Code :"
                    android:paddingLeft="@dimen/twelve"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/vehicleBarcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Make :"
                    android:paddingLeft="@dimen/twelve"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/vehicleMake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Model :"
                    android:paddingLeft="@dimen/twelve"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/vehicleModel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Color :"
                    android:paddingLeft="@dimen/twelve"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/vehicleColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Membership :"
                    android:paddingLeft="@dimen/twelve"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/vehicleMembershipName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profileQColor"
                    android:textSize ="@dimen/textFourteen"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>