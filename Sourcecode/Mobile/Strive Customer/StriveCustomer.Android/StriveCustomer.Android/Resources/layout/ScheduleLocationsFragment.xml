<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Select Location"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:id="@+id/scheduleLocations_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Back" />
         <Button
            android:id="@+id/scheduleLocations_NextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="Next" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ScheduleLocations_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="110dp"
            android:weightSum="1"
            android:background="@drawable/secondarylinearlayout">  
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85">
                <RadioGroup
                    android:id="@+id/scheduleLocations_RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginRight="@dimen/fifteen"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle" />
            </ScrollView>
             <Button
                android:id="@+id/ScheduleLocationCancel_Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:background="@drawable/secondarybutton"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@android:string/cancel"/>
        </LinearLayout>
</LinearLayout>
