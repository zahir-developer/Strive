
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FCFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Confirmation"
            android:textSize="18sp"
            android:textColor="@color/profileInfoColor"
            android:fontFamily="@font/opensans_bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="@color/profileQColor"
            android:background="@color/mtrl_btn_transparent_bg_color"
            android:text="" />
     </RelativeLayout>
     <LinearLayout
        android:id="@+id/ScheduleLocations_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/secondarylinearlayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Appointment scheduled on"
            android:textSize="14sp"
            android:textColor="#007B6E"
            android:gravity="center"
            android:fontFamily="@font/opensans_bold"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/confirmationPreviewDate_TextView"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.25"
                android:gravity="right"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#11283D"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/confirmationPreviewTime_TextView"
                android:textSize="14sp"    
                android:layout_width="0dp"
                android:textColor="#1DC9B7"
                android:layout_weight="0.75"
                android:gravity="left"
                android:fontFamily="@font/opensans_bold"
                android:layout_height="wrap_content"/>        
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle"
            android:gravity="center"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#30343C"/>
        <TextView
            android:id="@+id/confirmationVehicleName_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#30343C"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Your appointment for the above"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#30343C"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="date and time has"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#30343C"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="been confirmed!"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#30343C"/> 
        <TextView
            android:id="@+id/backtodashboard_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Back to Dashboard"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#24489A"/>
    </LinearLayout>
</LinearLayout>