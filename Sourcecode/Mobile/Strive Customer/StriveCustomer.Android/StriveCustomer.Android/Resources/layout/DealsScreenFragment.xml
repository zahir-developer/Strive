
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="4"
    android:background="@drawable/mobile_portrait_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Deals"
        android:layout_weight="0.3"
        android:textSize="@dimen/textTwenty"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dealsList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.6"/>    
    <Button
        android:id="@+id/qrCodeScan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Scan Qr code"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:textColor="@color/defaultLabelColor"
        android:layout_marginLeft="@dimen/twentyFive"
        android:layout_marginRight="@dimen/twentyFive"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/primarybutton"
        android:fontFamily="@font/opensans_bold" />
   

</LinearLayout>