
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bubblepopwindow">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:id="@+id/markerWashTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/textTen"
            android:text="Alpharetta"
            android:gravity="center"
            android:textColor="@color/infoTextColor"
            android:fontFamily="@font/opensans_bold"
            android:layout_weight="0.7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/fifteen"
            android:background="@drawable/mapwashinfo">
            <ImageView
                android:id="@+id/markerWindowIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"/>
             <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/openTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opens at"
                    android:textSize="@dimen/textTen"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_regular"/>
                <TextView
                    android:id="@+id/washTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:textSize="@dimen/textTen"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_bold"/>
             </LinearLayout>
        </LinearLayout>     
        
    </LinearLayout>            
</LinearLayout>