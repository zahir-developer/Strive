
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:text="Select Membership"
        android:gravity="center"
        android:textSize="@dimen/sixteen"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginLeft="@dimen/fifty"
        android:layout_marginRight="@dimen/fifty"
        android:layout_marginBottom="115dp"
        android:background="@drawable/secondarylinearlayout">
         <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/membershipOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:layoutDirection="rtl"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>