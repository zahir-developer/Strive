
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/forty"    
    android:gravity="center">
   <ImageView
       android:layout_width="@dimen/Strive_Logo_Width"
       android:layout_height="@dimen/Strive_Logo_Height"
        android:src="@drawable/Strive_Logo_Page"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/seventy">
        <TextView
            android:id="@+id/enterOTPTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty"
            android:layout_marginLeft="@dimen/twenty"
            android:textColor="@color/defaultLabelColor"
            android:fontFamily="@font/opensans_bold" />
        <TextView
            android:id="@+id/OTPTextView"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginLeft="@dimen/twenty"
            android:fontFamily="@font/opensans_regular"         
            android:textColor="@color/secondaryLabelColor" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/ten">
    <android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/sixty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/twenty"
        app:boxBackgroundColor="@android:color/white"  
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="1"    
            android:textSize ="@dimen/twelve"
            android:gravity="center"    
            android:id="@+id/otpBox1" />  
</android.support.design.widget.TextInputLayout>
<android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/sixty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/fifteen"
        app:boxBackgroundColor="@android:color/white"  
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="1"    
            android:textSize ="@dimen/twelve"
            android:gravity="center"
            android:id="@+id/otpBox2" />  
</android.support.design.widget.TextInputLayout>
<android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/sixty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/fifteen"
        app:boxBackgroundColor="@android:color/white"  
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="1"    
            android:textSize ="@dimen/twelve"
            android:gravity="center"
            android:id="@+id/otpBox3" />  
</android.support.design.widget.TextInputLayout>
<android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/sixty"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/fifteen"
        app:boxBackgroundColor="@android:color/white"  
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="1"    
            android:textSize ="@dimen/twelve"
            android:gravity="center"
            android:id="@+id/otpBox4" />  
</android.support.design.widget.TextInputLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:orientation="horizontal">
    <TextView
        android:id="@+id/notReceiveOTPTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryLabelColor"    
        android:layout_marginLeft="@dimen/twenty" 
        android:layout_marginTop ="@dimen/ten"
        android:fontFamily="@font/opensans_regular"/>
    <TextView
        android:id="@+id/resendOTPTextView"    
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five"  
        android:layout_marginTop ="@dimen/ten"    
        android:fontFamily="@font/opensans_bold" 
        android:textColor="@color/defaultButtonColor"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"   
    android:orientation="vertical"
    android:layout_marginTop="@dimen/thirty">
        <Button
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/primarybutton"
            android:fontFamily="@font/opensans_bold"/>
</LinearLayout>
</LinearLayout>