
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_portrait_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Deals"
        android:textSize="@dimen/textTwenty"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans_bold"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dealsList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp" />   
    <Button
        android:id="@+id/qrCodeScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Qr code"
        android:textColor="@color/defaultLabelColor"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:background="@drawable/primarybutton"
        android:fontFamily="@font/opensans_bold" />

</LinearLayout>