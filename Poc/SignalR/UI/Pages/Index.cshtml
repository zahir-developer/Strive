@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <b>Use below link to call the API and pass the count as you want to update.</b>
            <br />
             <a href="https://localhost:44319/api/signalr?count=1">API URL</a>
        </div>
    </div>
    <div class="row">
        <div class="col-6" style="display:none;">
            User..........<input type="text" id="userInput" />
            <br />
            Message...<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
        <div class="col-6" display="block">
            <label class="col-form-label-lg">No. of CheckIn:  </label>
            <label style="font:bold;" class="col-form-label-sm" id="checkInCounts">0</label>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>